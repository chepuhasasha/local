# Среда выполнения (development | production | test)
NODE_ENV=development

# HTTP порт приложения
PORT=3000

# Уровень логов (log | error | warn | debug | verbose)
LOG_LEVEL=debug

# PostgreSQL параметры
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=addresses

# Auth параметры
AUTH_JWT_SECRET=dev-secret-change-me
AUTH_ACCESS_TTL_SECONDS=900
AUTH_REFRESH_TTL_SECONDS=2592000
AUTH_OTP_TTL_SECONDS=600
AUTH_OTP_LENGTH=6
AUTH_OTP_COOLDOWN_SECONDS=60
AUTH_OTP_WINDOW_SECONDS=3600
AUTH_OTP_MAX_PER_WINDOW=5

# Rate limiting (throttling)
THROTTLE_DEFAULT_TTL_SECONDS=60
THROTTLE_DEFAULT_LIMIT=100
THROTTLE_AUTH_EMAIL_START_TTL_SECONDS=300
THROTTLE_AUTH_EMAIL_START_LIMIT=5
THROTTLE_AUTH_EMAIL_VERIFY_TTL_SECONDS=300
THROTTLE_AUTH_EMAIL_VERIFY_LIMIT=10
THROTTLE_AUTH_PASSWORD_LOGIN_TTL_SECONDS=300
THROTTLE_AUTH_PASSWORD_LOGIN_LIMIT=10
THROTTLE_AUTH_REFRESH_TTL_SECONDS=60
THROTTLE_AUTH_REFRESH_LIMIT=30
THROTTLE_TRUST_PROXY=false

# SMTP (опционально)
MAILER_HOST=
MAILER_PORT=
MAILER_USER=
MAILER_PASSWORD=
MAILER_FROM=
MAILER_SECURE=false

# Расширенные поля /health/info
HEALTH_VERBOSE=true
# Таймаут проверки базы в /health/ready (мс)
HEALTH_DB_TIMEOUT_MS=2000

# Swagger UI (true | false)
SWAGGER_ENABLED=true

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_ALLOW_CREDENTIALS=false

# Лимиты тела запроса (байты)
HTTP_JSON_BODY_LIMIT_BYTES=1048576
HTTP_URLENCODED_BODY_LIMIT_BYTES=102400

# Версия приложения (опционально)
APP_VERSION=dev
APP_COMMIT_SHA=local

# Месяц выгрузки адресов YYYYMM
ADDRESS_DATA_MONTH=202512

# Режим импорта адресов (upsert | replace)
ADDRESS_IMPORT_MODE=upsert

# Параметры импорта адресов
ADDRESS_CHUNK_SIZE=5000
ADDRESS_DOWNLOAD_LOG_MS=1500
ADDRESS_DOWNLOAD_TIMEOUT_MS=120000
ADDRESS_INSERT_LOG_MS=1500
ADDRESS_COMMIT_EVERY_BATCHES=40
ADDRESS_DROP_INDEXES=true
ADDRESS_COUNT_LINES_FOR_PERCENT=false
