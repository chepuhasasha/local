# Среда выполнения (development | production | test)
NODE_ENV=test

# HTTP порт приложения
PORT=3001

# Уровень логов (log | error | warn | debug | verbose)
LOG_LEVEL=warn

# PostgreSQL параметры (отдельная база для тестов)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=addresses_test

# Auth параметры
AUTH_JWT_SECRET=test-secret-change-me
AUTH_ACCESS_TTL_SECONDS=300
AUTH_REFRESH_TTL_SECONDS=3600
AUTH_OTP_TTL_SECONDS=300
AUTH_OTP_LENGTH=6
AUTH_OTP_COOLDOWN_SECONDS=10
AUTH_OTP_WINDOW_SECONDS=300
AUTH_OTP_MAX_PER_WINDOW=5

# Rate limiting (throttling)
THROTTLE_DEFAULT_TTL_SECONDS=60
THROTTLE_DEFAULT_LIMIT=100
THROTTLE_AUTH_EMAIL_START_TTL_SECONDS=300
THROTTLE_AUTH_EMAIL_START_LIMIT=5
THROTTLE_AUTH_EMAIL_VERIFY_TTL_SECONDS=300
THROTTLE_AUTH_EMAIL_VERIFY_LIMIT=10
THROTTLE_AUTH_REFRESH_TTL_SECONDS=60
THROTTLE_AUTH_REFRESH_LIMIT=30
THROTTLE_TRUST_PROXY=false

# SMTP (не используется в тестах)
MAILER_HOST=
MAILER_PORT=
MAILER_USER=
MAILER_PASSWORD=
MAILER_FROM=
MAILER_SECURE=false

# Расширенные поля /health/info
HEALTH_VERBOSE=false
# Таймаут проверки базы в /health/ready (мс)
HEALTH_DB_TIMEOUT_MS=2000

# Swagger UI (true | false)
SWAGGER_ENABLED=false

# Версия приложения (опционально)
APP_VERSION=test
APP_COMMIT_SHA=local-test

# Месяц выгрузки адресов YYYYMM
ADDRESS_DATA_MONTH=202512

# Режим импорта адресов (upsert | replace)
ADDRESS_IMPORT_MODE=upsert

# Параметры импорта адресов
ADDRESS_CHUNK_SIZE=2000
ADDRESS_DOWNLOAD_LOG_MS=3000
ADDRESS_DOWNLOAD_TIMEOUT_MS=120000
ADDRESS_INSERT_LOG_MS=3000
ADDRESS_COMMIT_EVERY_BATCHES=20
ADDRESS_DROP_INDEXES=false
ADDRESS_COUNT_LINES_FOR_PERCENT=false
