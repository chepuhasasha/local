# Среда выполнения (development | production | test)
NODE_ENV=production

# HTTP порт приложения
PORT=3000

# Уровень логов (log | error | warn | debug | verbose)
LOG_LEVEL=log

# PostgreSQL параметры
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=addresses
POSTGRES_PASSWORD=change-me
POSTGRES_DB=addresses

# Расширенные поля /health/info
HEALTH_VERBOSE=false

# Версия приложения (опционально)
APP_VERSION=1.0.0
APP_COMMIT_SHA=0000000

# Месяц выгрузки адресов YYYYMM
ADDRESS_DATA_MONTH=202512

# Режим импорта адресов (upsert | replace)
ADDRESS_IMPORT_MODE=upsert

# Параметры импорта адресов
ADDRESS_CHUNK_SIZE=8000
ADDRESS_DOWNLOAD_LOG_MS=5000
ADDRESS_INSERT_LOG_MS=5000
ADDRESS_COMMIT_EVERY_BATCHES=80
ADDRESS_DROP_INDEXES=true
ADDRESS_COUNT_LINES_FOR_PERCENT=true
